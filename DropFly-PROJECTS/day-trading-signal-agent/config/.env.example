# Day Trading Signal Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# N8N CONFIGURATION
# ==============================================================================

# n8n Webhook URL (from n8n "Webhook - Receive Signal" node)
N8N_WEBHOOK_URL=https://your-n8n-instance.app/webhook/trading-signals

# n8n Instance URL (if self-hosted)
N8N_HOST=http://localhost:5678

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================

# OpenAI API Key (for GPT-4 signal evaluation)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model (recommended: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# OpenAI Temperature (0.0-1.0, recommended: 0.3)
OPENAI_TEMPERATURE=0.3

# ==============================================================================
# TELEGRAM CONFIGURATION
# ==============================================================================

# Telegram Bot Token
# Create bot via @BotFather on Telegram
# Example: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz123456789
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram Chat ID
# Get your chat ID from @userinfobot
# Example: 123456789 or -100123456789 (for groups)
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==============================================================================
# DISCORD CONFIGURATION
# ==============================================================================

# Discord Webhook URL
# Create from Server Settings → Integrations → Webhooks
# Example: https://discord.com/api/webhooks/123456789/abcdefghijk...
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# ==============================================================================
# TRADINGVIEW CONFIGURATION
# ==============================================================================

# TradingView Account (for reference only)
TRADINGVIEW_USERNAME=your-tradingview-username

# TradingView Plan (must be Premium for webhooks)
# Options: Basic, Pro, Pro+, Premium
TRADINGVIEW_PLAN=Premium

# ==============================================================================
# TRADING CONFIGURATION
# ==============================================================================

# Supported tickers (comma-separated)
TICKERS=NVDA,AAPL,META,TSLA,SPY,QQQ

# Trading hours (ET timezone)
MARKET_OPEN=09:30
MARKET_CLOSE=16:00

# Position sizing
POSITION_SIZE_MIN=800
POSITION_SIZE_MAX=1500

# Risk management
MAX_LOSS_PER_TRADE=7
TARGET_GAIN_MIN=10
TARGET_GAIN_MAX=15
MAX_TRADES_PER_DAY=3
MAX_DAILY_LOSS=200
DAILY_PROFIT_TARGET=300

# ==============================================================================
# SIGNAL FILTERING
# ==============================================================================

# Minimum signal quality to send alerts
# Options: HIGH, MEDIUM, LOW
MIN_SIGNAL_QUALITY=MEDIUM

# Enable/disable signal types
ENABLE_LONG_SIGNALS=true
ENABLE_PUT_SIGNALS=true

# Volume threshold multiplier
VOLUME_THRESHOLD=1.2

# ==============================================================================
# TIMEFRAME CONFIGURATION
# ==============================================================================

# Primary chart timeframe (in minutes)
PRIMARY_TIMEFRAME=1

# Alternative timeframe for confirmation
SECONDARY_TIMEFRAME=5

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable signal logging to file
ENABLE_SIGNAL_LOGGING=true

# Signal log file path
SIGNAL_LOG_PATH=./logs/signals.log

# ==============================================================================
# TESTING & DEVELOPMENT
# ==============================================================================

# Enable test mode (simulated signals)
TEST_MODE=false

# Test webhook URL (for local testing)
TEST_WEBHOOK_URL=http://localhost:5678/webhook-test/trading-signals

# ==============================================================================
# NOTES
# ==============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep your API keys and tokens secret
# 3. Use strong, unique credentials
# 4. Rotate keys periodically
# 5. Enable 2FA on all accounts (TradingView, OpenAI, Telegram)

# ==============================================================================
# GETTING CREDENTIALS
# ==============================================================================

# OpenAI API Key:
#   1. Go to https://platform.openai.com/api-keys
#   2. Click "Create new secret key"
#   3. Copy and save securely

# Telegram Bot Token:
#   1. Open Telegram and search for @BotFather
#   2. Send /newbot
#   3. Follow prompts to create bot
#   4. Copy the bot token

# Telegram Chat ID:
#   1. Open Telegram and search for @userinfobot
#   2. Send /start
#   3. Copy your chat ID

# Discord Webhook:
#   1. Open Discord server
#   2. Go to Server Settings → Integrations
#   3. Click "Webhooks" → "New Webhook"
#   4. Copy webhook URL

# n8n Webhook URL:
#   1. Open your n8n workflow
#   2. Click on "Webhook - Receive Signal" node
#   3. Click "Execute Node" to activate
#   4. Copy the production webhook URL
