# DropFly Agent — Terraform Variables
# Copy this to terraform.tfvars and fill in your values.
# NEVER commit terraform.tfvars to git.

# Required
key_pair_name        = "dropfly-key"
anthropic_api_key    = ""
supabase_url         = ""
supabase_service_key = ""
gateway_secret_key   = ""  # Generate with: openssl rand -hex 32

# Optional — instance sizing
# instance_type = "t3.xlarge"  # 4 vCPU, 16 GB RAM
# volume_size   = 100          # GB

# Optional — networking
# allowed_ssh_cidrs = ["YOUR_IP/32"]  # Or leave empty for Tailscale-only access
# allowed_api_cidrs = ["0.0.0.0/0"]  # Lock down in production

# Optional — additional API keys
# openai_api_key      = ""
# twilio_account_sid  = ""
# twilio_auth_token   = ""
# twilio_phone_number = ""
# elevenlabs_api_key  = ""
# tavily_api_key      = ""
