# Fastfile for TradeFly iOS automation

default_platform(:ios)

platform :ios do
  desc "Build the app for testing"
  lane :build do
    build_app(
      scheme: "TradeFly",
      destination: "generic/platform=iOS Simulator",
      skip_archive: true,
      skip_codesigning: true
    )
  end

  desc "Run all tests"
  lane :test do
    scan(
      scheme: "TradeFly",
      device: "iPhone 17 Pro",
      code_coverage: true
    )
  end

  desc "Take screenshots"
  lane :screenshots do
    snapshot
  end

  desc "Build and upload to TestFlight"
  lane :beta do
    # Increment build number
    build_number = get_build_number(xcodeproj: "TradeFly.xcodeproj")
    UI.message("Current build number: #{build_number}")

    # Ensure automatic signing is enabled - let Xcode handle everything
    update_code_signing_settings(
      use_automatic_signing: true,
      path: "TradeFly.xcodeproj",
      team_id: "G46B7YC46C",
      bundle_identifier: "com.tradefly.TradeFly"
    )

    # Build and archive with automatic signing
    gym(
      scheme: "TradeFly",
      configuration: "Release",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "TradeFly.ipa",
      clean: true,
      xcodebuild_formatter: "",  # Disable xcpretty to avoid bundler issues
      export_options: {
        method: "app-store",
        teamID: "G46B7YC46C",
        uploadSymbols: true,
        uploadBitcode: false
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      skip_submission: true,
      distribute_external: false,
      notify_external_testers: false,
      ipa: "./build/TradeFly.ipa"
    )

    UI.success("âœ… Build #{build_number} uploaded to TestFlight successfully!")
  end

  desc "Deploy to App Store"
  lane :release do
    increment_build_number
    build_app(scheme: "TradeFly")
    upload_to_app_store(
      submit_for_review: false,
      automatic_release: false
    )
  end
end
